@page
@model JewelleryStore.Pages.Modules.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Productos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Productos.ProductoId" />
            <div class="form-group">
                <label asp-for="Productos.NombreProducto" class="control-label"></label>
                <input asp-for="Productos.NombreProducto" class="form-control" />
                <span asp-validation-for="Productos.NombreProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Productos.CategoriaId" class="control-label"></label>
                <select asp-for="Productos.CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="Productos.CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Productos.Precio" class="control-label"></label>
                <input asp-for="Productos.Precio" class="form-control" />
                <span asp-validation-for="Productos.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
