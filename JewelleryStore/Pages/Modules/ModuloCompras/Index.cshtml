<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].NumeroFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].FechaCompras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].Subtotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].Iva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compras[0].Estado)
