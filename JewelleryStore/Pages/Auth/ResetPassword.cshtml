@page
@model JewelleryStore.Pages.Auth.ResetPasswordModel
@{
    ViewData["Title"] = "Restaurar contraseña";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm mt-5">
            <div class="card-body p-4">
                <h4 class="card-title mb-3">¿Olvidaste tu contraseña?</h4>
                <p class="text-muted small">
                    Ingresa el correo electrónico asociado a tu cuenta. Si existe, te enviaremos un código de recuperación para
                    restablecer la contraseña.
                </p>

                <form method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert" id="validationSummary"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    @Html.AntiForgeryToken()

                    <div class="d-grid">
                        <button type="submit" class="btn btn-light btn-dark">Enviar enlace de recuperación</button>
                        <br />
                        <a asp-page="/Auth/Index" class="btn btn-light btn-secondary">Volver al inicio de sesión</a>
                    </div>
                </form>

                @if (Model.Message != null)
                {
                    <div class="alert alert-info mt-3" role="alert">
                        @Model.Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Mostrar summary si hay errores (un poco de UX)
        document.addEventListener('DOMContentLoaded', () => {
            const summary = document.querySelector('[asp-validation-summary="ModelOnly"], #validationSummary');
            if (summary && summary.textContent.trim().length > 0) {
                summary.classList.remove('d-none');
            }
        });
    </script>
}